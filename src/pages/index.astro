  border: 1px solid #fff;
  border-radius: 2em;
  color: #fff;
  font-weight: 600;
  font-size: 1.1rem;
  text-decoration: none;
  transition: background 0.2s, color 0.2s, border 0.2s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.12);
  backdrop-filter: blur(2px);
}
