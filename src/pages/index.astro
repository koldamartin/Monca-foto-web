				position: relative;
			}

			body::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: rgba(0, 0, 0, 0.4);
				z-index: 1;
			}

			.header {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 100;
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 2rem 0 0 0;
				background: transparent;
			}

			.header-container {
				display: flex;
				align-items: center;
				justify-content: flex-end;
				width: 100%;
				max-width: 1200px;
				padding: 0 2rem;
			}

			.logo {
				display: flex;
				justify-content: center;
				align-items: center;
				margin-bottom: 1.5rem;
				width: 100%;
			}

			.logo-img {
				max-width: 320px;
				width: 100%;
				height: auto;
				display: block;
				margin: 0 auto;
				background: transparent;
			}


			.hamburger {
				display: none;
				flex-direction: column;
				background: none;
				border: none;
				cursor: pointer;
				padding: 0.5rem;
				z-index: 101;
			}

			.hamburger-line {
				width: 25px;
				height: 3px;
				background-color: #FFFFFF;
				margin: 3px 0;
				transition: 0.3s;
				box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
			}

			.hamburger.active .hamburger-line:nth-child(1) {
				transform: rotate(-45deg) translate(-5px, 6px);
			}

			.hamburger.active .hamburger-line:nth-child(2) {
				opacity: 0;
			}

			.hamburger.active .hamburger-line:nth-child(3) {
				transform: rotate(45deg) translate(-5px, -6px);
			}

			.nav {
				display: flex;
				gap: 3rem;
			}

			.nav a {
				color: #FFFFFF;
				text-decoration: none;
				font-weight: 400;
				font-size: 0.9rem;
				letter-spacing: 2px;
				text-transform: uppercase;
				transition: opacity 0.3s ease;
				text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
			}

			.nav a:hover {
				opacity: 0.8;
			}

			.hero {
				height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
				z-index: 10;
			}

			.hero-content {
				text-align: center;
				color: #FFFFFF;
			}

			.hero-title {
				font-weight: 900;
				line-height: 1.1;
				text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
			}

			.line-1 {
				display: block;
				font-size: 3.5rem;
				margin-bottom: 0.5rem;
			}

			.line-2 {
				display: block;
				font-size: 2rem;
				font-weight: 400;
				margin-bottom: 0.5rem;
			}

			.line-3 {
				display: block;
				font-size: 4.5rem;
				position: relative;
				margin-top: 1rem;
			}

			.line-3::after {
				content: '';
				position: absolute;
				bottom: -10px;
				left: 50%;
				transform: translateX(-50%);
				width: 100%;
				height: 8px;
				background: #FFD100;
				border-radius: 4px;
			}

			@media (max-width: 768px) {
				.header {
					padding: 1rem 0;
				}

				.header-container {
					flex-direction: row;
					justify-content: space-between;
					align-items: center;
					padding: 0 1rem;
				}

				.logo {
					margin-bottom: 0;
				}

				.logo-img {
					max-width: 200px;
				}

				.hamburger {
					display: flex;
				}

				.nav {
					position: fixed;
