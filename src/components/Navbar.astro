---
export interface Props {
	isHomepage?: boolean;
	showInstagram?: boolean;
	hasPhotoBackground?: boolean;
}

const { isHomepage = false, showInstagram = true, hasPhotoBackground = true } = Astro.props;
---

<header class={`header ${!hasPhotoBackground ? 'no-photo-bg' : ''}`}>
	<div class="header-container">
		<button class="hamburger" id="hamburger" aria-label="Toggle navigation">
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
		</button>
	</div>
	<div class="nav-instagram-wrapper">
		<nav class="nav" id="nav">
			<a href={isHomepage ? "#about" : "/#about"}>O MNĚ</a>
			<a href="/portfolio">PORTFOLIO</a>
			<a href="/cenik">CENÍK</a>
			<a href={isHomepage ? "#contact" : "/#contact"}>KONTAKT</a>
		</nav>
		{showInstagram && (
			<div class="instagram-container">
				<a href="https://www.instagram.com/moni_musi_photo_video/" class="instagram-btn" target="_blank" rel="noopener" aria-label="Instagram">
					<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="instagram-logo"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.5" y2="6.5"></line></svg>
					<span>Instagram</span>
				</a>
			</div>
		)}
	</div>
</header>

<style>
	.header {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		z-index: 20;
		display: flex;
		flex-direction: column;
		align-items: center;
		background: transparent;
		padding: 2rem 0;
		width: 100%;
	}

	.header.no-photo-bg {
		position: relative;
		background: #F8F5F0;
		border-bottom: 1px solid #e0e0e0;
	}

	.header.no-photo-bg .nav a {
		color: #333;
		text-shadow: none;
	}

	@media (max-width: 768px) {
		.header.no-photo-bg .nav a {
			color: #FFFFFF;
			text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
		}
	}

	.header.no-photo-bg .hamburger-line {
		background-color: #333;
		box-shadow: none;
	}

	.header-container {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		max-width: 1200px;
		padding: 0 2rem;
	}

	.hamburger {
		display: none;
		flex-direction: column;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		z-index: 101;
	}

	.hamburger-line {
		width: 25px;
		height: 3px;
		background-color: #FFFFFF;
		margin: 3px 0;
		transition: 0.3s;
		box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.hamburger.active .hamburger-line:nth-child(1) {
		transform: rotate(-45deg) translate(-5px, 6px);
	}

	.hamburger.active .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.hamburger.active .hamburger-line:nth-child(3) {
		transform: rotate(45deg) translate(-5px, -6px);
	}

	.nav-instagram-wrapper {
		display: flex;
		align-items: center;
		gap: 3rem;
	}

	.nav {
		display: flex;
		gap: 3rem;
		position: relative;
	}

	.nav a {
		color: #FFFFFF;
		text-decoration: none;
		font-weight: 400;
		font-size: 1.2rem;
		letter-spacing: 2px;
		text-transform: uppercase;
		transition: opacity 0.3s ease;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.nav a:hover {
		color: #A8D5BA;
		font-weight: 600;
	}

	.instagram-container {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.instagram-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		padding: 0.6em 1.2em;
		background: rgba(255,255,255,0.15);
		border: 1px solid #A8D5BA;
		border-radius: 2em;
		color: #fff;
		font-weight: 600;
		font-size: 1.1rem;
		text-decoration: none;
		transition: background 0.2s, color 0.2s, border 0.2s;
		box-shadow: 0 2px 8px rgba(0,0,0,0.12);
		backdrop-filter: blur(2px);
	}

	.instagram-btn:hover {
		background: linear-gradient(45deg, #E4405F, #F56040, #FFDC80);
		color: white;
		border-color: transparent;
	}

	.instagram-logo {
		width: 1.5em;
		height: 1.5em;
		vertical-align: middle;
	}

	@media (max-width: 768px) {
		.header-container {
			justify-content: flex-end;
			padding: 0 1rem;
		}

		.hamburger {
			display: flex;
		}

		.nav {
			position: fixed;
			top: 0;
			right: -350px;
			width: 300px;
			height: 400px;
			background: rgba(0, 0, 0, 0.95);
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 2rem;
			transition: right 0.3s ease;
			z-index: 99;
			border-radius: 0 0 0 20px;
			box-shadow: -5px 5px 20px rgba(0, 0, 0, 0.3);
		}

		.nav.active {
			right: 0;
		}

		.nav a {
			font-size: 1.2rem;
			padding: 1rem;
		}
	}
</style>

<script>
	const hamburger = document.getElementById('hamburger');
	const nav = document.getElementById('nav');

	hamburger?.addEventListener('click', () => {
		hamburger.classList.toggle('active');
		nav?.classList.toggle('active');
	});

	nav?.addEventListener('click', (e) => {
		if (e.target instanceof HTMLElement && e.target.tagName === 'A') {
			hamburger?.classList.remove('active');
			nav?.classList.remove('active');
		}
	});

	document.addEventListener('click', (e) => {
		if (e.target instanceof HTMLElement && !hamburger?.contains(e.target) && !nav?.contains(e.target)) {
			hamburger?.classList.remove('active');
			nav?.classList.remove('active');
		}
	});
</script>