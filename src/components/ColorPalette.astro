<style>
	/* Color Palette Section */
	.color-palette-section {
		background: #F8F5F0;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 6rem 2rem 0 2rem;
		margin: 0;
		font-family: 'Times New Roman', serif;
	}

	.palette-container {
		max-width: 800px;
		width: 100%;
		text-align: center;
		color: #1C1C1C;
	}

	.greeting {
		font-size: 1.5rem;
		font-weight: 400;
		letter-spacing: 0.2em;
		text-transform: uppercase;
		margin-bottom: 2rem;
		color: #1C1C1C;
	}

	.main-headline {
		font-size: 3.5rem;
		font-weight: 400;
		text-transform: none;
		margin-bottom: 2rem;
		color: #A8D5BA;
		font-family: 'Allura', cursive;
	}

	.sheffield-highlight {
		font-weight: 900;
		position: relative;
		display: inline-block;
	}

	.sheffield-highlight::after {
		display: none;
	}

	.alternative-text {
		color: #911B1B;
		font-weight: 900;
		display: inline-block;
		margin-top: 1rem;
	}

	.divider-line {
		width: 100px;
		height: 1px;
		background: #1C1C1C;
		margin: 0 auto 1.5rem auto;
	}

	.body-content {
		max-width: 600px;
		margin: 0 auto;
	}

	.description-paragraph,
	.location-paragraph {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 1.5rem;
		color: #1C1C1C;
	}

	.description-paragraph strong {
		font-weight: 700;
	}

	.highlight-text {
		position: relative;
		font-weight: 700;
	}

	.highlight-text::after {
		display: none;
	}

	@media (max-width: 768px) {
		.color-palette-section {
			padding: 3rem 1.5rem;
		}
		
		.greeting {
			font-size: 1.2rem;
		}
		
		.main-headline {
			font-size: 2.5rem;
		}
		
		.description-paragraph,
		.location-paragraph {
			font-size: 1rem;
		}
	}

	@media (max-width: 480px) {
		.main-headline {
			font-size: 2rem;
		}
		
		.greeting {
			font-size: 1rem;
		}
	}
</style>